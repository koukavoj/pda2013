<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_border_top_bottom_3dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mainScreenUserImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/mainScreenDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainScreenMessage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/mainScreenUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/mainScreenUserImage"
        android:text="TextView" />

    <ImageView
        android:id="@+id/mainScreenArrow"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_above="@+id/mainScreenUserName"
        android:layout_toRightOf="@+id/mainScreenUserImage"
        />

    <GridView
        android:id="@+id/mainScreenMessage"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginLeft="80dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mainScreenArrow"
        android:numColumns="5"
        android:padding="4dp" >
    </GridView>

</RelativeLayout>